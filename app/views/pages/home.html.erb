<% if user_signed_in? %>
  <div class="container">
    <div class="profile">
      <div class="title">
        <h1>Cinemakers</h1>

      </div>
      <div class="user">
        <p><%= current_user.first_name %></p>
        <p><%= current_user.last_name %></p>
        <p><%= current_user.tag %></p>
        <p><%= current_user.bio %></p>
        <p><%= current_user.company %></p>
        <p><%= current_user.city %></p>
        <p><%= current_user.state %></p>
        <p><%= current_user.website %></p>
      </div>
    </div>
    <div class="teams-list">
      <div class="row">
        <p><%= link_to "View All Teams", teams_path, class: "btn btn-primary" %></p>
        <p><%= link_to "New Team", new_team_path, class: "btn btn-primary" %></p>
        <h2>My Teams</h2>
      </div>

      <div class="row">
        <% current_user.teams.each do |team| %>
          <div class="team">
            <p><%= link_to "#{team.name}", team_path(team.id), class: "btn btn-primary" %></p>
          </div>
        <% end %>

      </div>



    </div>
    <div class="projects-list">
      <h2>My Projects</h2>
      <% current_user.teams.each do |team| %>
        <% team.projects.each do |project| %>
          <div class="project-card">
            <h3><%= "#{project.name}" %></h3>
            <div class="project-actions">
              <%= link_to "Go To Project", project_path(project.id), class: "btn btn-primary" %>
              <%= link_to "Delete Project", project, method: :delete, class: "btn btn-primary" %>

            </div>

          </div>
        <% end %>
      <% end %>




      <div class="new-project">
        <p><%= link_to "New Project", new_project_path, class: "btn btn-primary" %></p>
      </div>
    </div>
  </div>
<% else %>
  <div class="container">
    <h1>Welcome to Cinemakers</h1>
    <%= link_to "Login", new_user_session_path, class: " btn btn-primary" %>
  </div>
<% end %>
