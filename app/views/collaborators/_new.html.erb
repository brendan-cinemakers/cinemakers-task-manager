<div class="container collaborator-add-modal">
  <h4>Add a user</h4>

  <%= simple_form_for [@project, @collaborator] do |f| %>
    <% if @collaborator.errors.any? %>
      <div class="errors-container">
        <ul>
          <% @collaborator.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.association :user,label: false, label_method: lambda { |user| "#{user.first_name} #{user.last_name} | @#{user.user_name}" }, input_html: { class: 'users-search' } %>
    <%= f.input :position, label: false, placeholder: 'Team members position'%>
    <%= f.submit class: 'btn btn-primary', value: 'Add to Team' %>
<% end %>
</div>



