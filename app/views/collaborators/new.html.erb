<%= simple_form_for [@project, @collaborator] do |f| %>
  <% if @collaborator.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @collaborator.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.input :user_id, collection: User.all, label: false %>

  <%= f.input :user_id %>

  <%= f.submit class: 'btn btn-primary', value: 'Add to Team' %>
<% end %>



