<div class="container">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div>
        <h4>Change Information</h4>
        <div class="row">
         <%= f.input :first_name,
                    label: false,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "first name", class: 'name-input' }%>
        <%= f.input :last_name,
                    label: false,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "last name", class: 'name-input' }%>
        </div>
        <div class="row">
          <%= f.input :user_name,
                      label: false,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "username", class: 'long-input' }%>
          <%= f.input :email,
                      label: false,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: 'long-input' }%>
        </div>
        <div class="row">
          <%= f.input :city,
                      label: false,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "city", class: 'city-input' }%>

          <%= f.input :state,
                      label: false,
                      collection: ['AL', 'AK', 'AZ', 'AR', 'CA', 'CO', 'CT', 'DE', 'FL', 'GA', 'HI', 'ID', 'IL', 'IN',
                        'IA', 'KS', 'KY', 'LA', 'ME', 'MD', 'MA', 'MI', 'MN', 'MS', 'MO', 'MT', 'NE', 'NV', 'NH', 'NJ','NM', 'NY', 'NC', 'ND', 'OH', 'OK', 'OR', 'PA', 'RI', 'SC', 'SD', 'TN', 'TX', 'UT', 'VT', 'VA', 'WA', 'WV','WI' ,'WY'],
                      label: false,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "state", class: "state-search"}%>

        </div>

      <%= f.input :photo, as: :file %>

      </div>
      <div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>
          <h4>Change Password</h4>
        <div class="row">
          <%= f.input :password,
                      hint: "leave it blank if you don't want to change it",
                      required: false,
                      input_html: { autocomplete: "new-password", class: 'password-input' } %>
          <%= f.input :password_confirmation,
                      required: false,
                      input_html: { autocomplete: "new-password", class: 'password-input' } %>
        </div>
        <h4>Confirm Current Passowrd and Save</h4>
        <div class="row">
        <%= f.input :current_password,
                    hint: "we need your current password to confirm your changes",
                    required: true,
                    input_html: { autocomplete: "current-password", class: 'password-input' } %>

        </div>
      </div>

      </div>


    <div class="form-actions btn btn-primary">
      <%= f.button :submit, "Update Account" %>
    </div>
  <% end %>

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>
</div>
